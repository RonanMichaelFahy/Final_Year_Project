<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ronan.final_year_project.TestRunActivity"
    android:id="@+id/testRun">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Pulse Width"
        android:id="@+id/pulse_width"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
    />
    <Button
        android:id="@+id/save_pulse_width_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/pulse_width"
    />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pulse_width"
        android:id="@+id/pulse_width_seek_bar"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Pulse Frequency"
        android:id="@+id/pulse_frequency"
        android:layout_below="@+id/pulse_width_seek_bar"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
    />
    <Button
        android:id="@+id/save_pulse_frequency_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/pulse_frequency"
    />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pulse_frequency"
        android:id="@+id/pulse_frequency_seek_bar"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ramp-up Time"
        android:id="@+id/rampUpTime"
        android:layout_below="@+id/pulse_frequency_seek_bar"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
    />
    <Button
        android:id="@+id/save_ramp_up_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/rampUpTime"
    />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rampUpTime"
        android:id="@+id/ramp_up_time_seek_bar"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ramp-down Time"
        android:id="@+id/ramp_down_time"
        android:layout_below="@+id/ramp_up_time_seek_bar"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
    />
    <Button
        android:id="@+id/save_ramp_down_time_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/ramp_down_time"
    />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ramp_down_time"
        android:id="@+id/ramp_down_time_seek_bar"
    />
</RelativeLayout>