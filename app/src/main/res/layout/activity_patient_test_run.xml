<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ronan.final_year_project.PatientTestRunActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ramp-up Time"
        android:id="@+id/rampUpTime"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/rampUpTime"
        android:id="@+id/saveRampUpTime" />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rampUpTime"
        android:id="@+id/rampUpTimeSeekBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Ramp-down Time"
        android:id="@+id/rampDownTime"
        android:layout_below="@+id/rampUpTimeSeekBar"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/rampDownTime"
        android:id="@+id/saveRampDownTime" />
    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rampDownTime"
        android:id="@+id/rampDownTimeSeekBar" />
</RelativeLayout>
